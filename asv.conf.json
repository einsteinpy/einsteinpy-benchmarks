{
    // The versions of Python to test against
    "pythons": ["3.6"],

    "environment_type": "conda",
    "conda_channels": ["conda-forge", "defaults"],

    // The matrix of dependencies to test.  Each key is the name of a
    // package (in PyPI) and the values are version numbers.  An empty
    // list indicates to just test against the default (latest)
    // version.
    "matrix": {
        "numpy": ["1.14"]
    },

    "dcvs": "git",

    // The git URL to the project being tested. Comment the first line
    // and uncomment and edit the second if you are testing local changes.
    "repo": "https://github.com/einsteinpy/einsteinpy.git",
    //"repo": "/your/local/repository/",

    "project": "EinsteinPy",

    "project_url": "http://einsteinpy.org/",

    "show_commit_url": "http://github.com/einsteinpy/einsteinpy/commit/",

    "version": 1

}
